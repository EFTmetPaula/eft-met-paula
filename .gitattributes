# Auto detect text files and perform LF normalization
* text=auto

# HTML files
*.html text diff=html

# CSS files
*.css text diff=css

# JavaScript files
*.js text diff=javascript

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg text

# Documentation
*.md text diff=markdown
*.txt text

# Config files
*.json text
*.yml text
*.yaml text
*.xml text

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore 